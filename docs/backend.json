
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the BookSwap application.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user (matches Firebase Auth UID)." },
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "name": { "type": "string", "description": "User's full name or business name." },
        "role": { "type": "string", "description": "Role of the user, determines permissions.", "enum": ["reader", "intermediary", "admin"] },
        "locationId": { "type": ["string", "null"], "description": "For 'intermediary' role, the ID of the location they manage." },
        "profile": {
            "type": "object",
            "description": "User's public profile and location settings.",
            "properties": {
                "primaryCity": {
                    "type": "object",
                    "properties": {
                        "name": { "type": "string" }, "provinceCode": { "type": "string" }, "placeId": { "type": "string" }, "lat": { "type": "number" }, "lng": { "type": "number" }
                    },
                    "required": ["name", "provinceCode", "placeId", "lat", "lng"]
                },
                "secondaryCity": {
                    "type": ["object", "null"],
                    "properties": {
                        "name": { "type": "string" }, "provinceCode": { "type": "string" }, "placeId": { "type": "string" }, "lat": { "type": "number" }, "lng": { "type": "number" }
                    }
                },
                "activeCity": { "type": "string", "enum": ["primary", "secondary"] },
                "avatarUrl": { "type": "string", "format": "uri" },
                "favoriteGenres": { "type": "array", "items": { "type": "string" } },
                "rating": { "type": "number", "minimum": 0, "maximum": 5 },
                "reviewCount": { "type": "number", "minimum": 0 },
                "createdAt": { "type": "string", "format": "date-time" },
                "updatedAt": { "type": "string", "format": "date-time" }
            },
            "required": ["primaryCity", "activeCity", "createdAt", "updatedAt"]
        },
        "subscription": {
          "type": "object",
          "description": "Subscription details, primarily for 'intermediary' role.",
          "properties": {
             "status": { "type": "string", "enum": ["active", "trialing", "cancelled", "past_due"] }
          }
        },
        "acceptedTermsAt": { "type": "string", "format": "date-time" },
        "acceptedPrivacyAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "name", "role", "profile"]
    },
    "Location": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Location",
        "type": "object",
        "description": "Represents an intermediary location (BookSwap Hub).",
        "properties": {
            "id": { "type": "string" },
            "ownerId": { "type": "string", "description": "UID of the 'intermediary' user who owns this location." },
            "name": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "provinceCode": { "type": "string" },
            "status": { "type": "string", "enum": ["active", "pending", "suspended"]},
            "geo": {
                "type": "object", "properties": { "lat": { "type": "number" }, "lng": { "type": "number" } }, "required": ["lat", "lng"]
            },
            "geohash": { "type": "string", "description": "Server-generated geohash for location queries." },
            "milestoneLevel": { "type": "number", "minimum": 0, "default": 0 },
            "qrToken": { "type": "string", "description": "Unique secret token to generate QR codes." },
            "metrics": { "type": "object", "properties": { "swapTotal": { "type": "number"}, "swap30d": { "type": "number"} }},
            "createdAt": { "type": "string", "format": "date-time" },
            "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "ownerId", "name", "city", "status", "geo", "createdAt", "updatedAt"]
    },
    "Book": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Book",
      "type": "object",
      "description": "A book listed by a user for swapping.",
      "properties": {
        "id": { "type": "string" }, 
        "ownerId": { "type": "string" }, 
        "title": { "type": "string" }, 
        "author": { "type": "string" }, 
        "isbn": { "type": ["string", "null"] }, 
        "status": { "type": "string", "enum": ["available", "reserved", "swapped"], "default": "available" },
        "location": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" },
            "city": { "type": "string" },
            "geohash": { "type": "string" }
          },
          "required": ["lat", "lng", "city", "geohash"]
        },
        "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "condition": { "type": "string", "enum": ["new", "like_new", "good", "fair", "poor"] },
        "notes": { "type": "string" }, 
        "createdAt": { "type": "string", "format": "date-time" }, 
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": [ "id", "ownerId", "title", "author", "status", "location", "createdAt", "updatedAt" ]
    },
    "Swap": { 
      "$schema": "http://json-schema.org/draft-07/schema#", 
      "title": "Swap", 
      "type": "object",
      "description": "Represents a book swap transaction and its state.",
      "properties": { 
        "id": { "type": "string" },
        "requesterId": { "type": "string" },
        "requesterBookId": { "type": "string" },
        "ownerId": { "type": "string" }, 
        "ownerBookId": { "type": "string" },
        "participantIds": { "type": "array", "items": { "type": "string" }, "minItems": 2, "maxItems": 2 },
        "status": { "type": "string", "enum": ["requested", "accepted", "confirmed", "completed", "cancelled", "rejected", "expired"] }, 
        "locationId": { "type": "string", "description": "The ID of the hub where the swap will be confirmed." },
        "confirmationCode": { "type": "string", "description": "A short, server-generated code for in-person confirmation."},
        "denormalized": {
            "type": "object",
            "properties": {
                "requesterName": { "type": "string" },
                "ownerName": { "type": "string" },
                "requesterBookTitle": { "type": "string" },
                "ownerBookTitle": { "type": "string" },
                "locationName": { "type": "string" }
            }
        },
        "createdAt": {"type": "string", "format": "date-time"}, 
        "updatedAt": {"type": "string", "format": "date-time"}, 
        "expiresAt": {"type": "string", "format": "date-time", "description": "Server-set expiration timestamp for the request."}, 
        "confirmedAt": {"type": ["string", "null"], "format": "date-time"},
        "confirmedBy": {"type": ["string", "null"], "description": "UID of the intermediary who confirmed the swap."}
      }, 
      "required": [ "id", "requesterId", "requesterBookId", "ownerId", "ownerBookId", "participantIds", "status", "locationId", "createdAt", "updatedAt" ] 
    },
     "cities": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "City", "type": "object", "description": "Dataset of cities for autocomplete and selection.",
        "properties": {
            "name": { "type": "string" }, "provinceCode": { "type": "string" }, "region": { "type": "string" }, "placeId": { "type": "string" }, "lat": { "type": "number" }, "lng": { "type": "number" }
        }
    }
  },
  "firestore": {
    "structure": [
      { "path": "/users/{userId}", "definition": { "entityName": "User", "schema": { "$ref": "#/entities/User" } } },
      { "path": "/cities/{cityId}", "definition": { "entityName": "cities", "schema": { "$ref": "#/entities/cities" } } },
      { "path": "/locations/{locationId}", "definition": { "entityName": "Location", "schema": { "$ref": "#/entities/Location" } } },
      { "path": "/books/{bookId}", "definition": { "entityName": "Book", "schema": { "$ref": "#/entities/Book" } } },
      { "path": "/swaps/{swapId}", "definition": { "entityName": "Swap", "schema": { "$ref": "#/entities/Swap" } } }
    ]
  }
}

    